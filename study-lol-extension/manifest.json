{
  "manifest_version": 3,
  "name": "Study.lol Bridge",
  "description": "Alt + Q로 현재 영상 URL을 study.lol로 열고 알림을 보냅니다.",
  "version": "0.1.0",
  "permissions": ["tabs", "notifications", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "open_study_lol": {
      "suggested_key": {
        "default": "Alt+Q"
      },
      "description": "현재 탭 URL을 study.lol로 열기"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
