{
  "manifest_version": 3,
  "name": "Video Summary Extension",
  "description": "Use Alt+Q to open Gemini and submit a summary prompt for the current video URL.",
  "version": "1.1.1",
  "permissions": ["tabs", "notifications", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Video Summary Settings",
    "default_popup": "popup.html"
  },
  "commands": {
    "open_gemini_summary": {
      "suggested_key": {
        "default": "Alt+Q"
      },
      "description": "Send a Gemini summary request for the current video URL from the active tab."
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon_title.png",
    "32": "icons/icon_title.png",
    "48": "icons/icon_title.png",
    "128": "icons/icon_title.png"
  },
  "options_page": "options.html"
}
